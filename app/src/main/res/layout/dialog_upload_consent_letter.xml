<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Consent Letter"
        android:textSize="20dp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_margin="10dp"/>
    <RelativeLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@color/white" />

        <ImageView
            android:id="@+id/bt_close"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_cancel"
            android:tint="@color/black" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageview_consent_letter"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginHorizontal="@dimen/dimen_30dp"
        android:src="@drawable/image_placeholder"
        android:scaleType="fitXY"
       android:layout_centerVertical="true"/>


    <Button
        android:id="@+id/btn_consent_letter_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageview_consent_letter"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_rect"
        android:text="Upload"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:layout_marginHorizontal="20dp"/>

    </RelativeLayout>
</RelativeLayout>